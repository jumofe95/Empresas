{% extends '::base.html.twig' %}
{% block body %}
<div align="center"><h1>LISTADO DE ALUMNOS</h1></div>
<div align="center">
  <table>
    <tr>
      <th>#</th>
      <th>NOMBRE</th>
      <th>APELLIDO 1</th>
      <th>APELLIDO 2</th>
      <th>CICLO</th>
      <th>EMPRESA</th>
    </tr>
    {% for alumno in alumnos %}
    <tr>
      <td>{{ alumno.id }}</td>    
      <td>{{ alumno.nombre }}</td>
      <td>{{ alumno.apellido1 }}</td>
      <td>{{ alumno.apellido2 }}</td>
      <td>{{ alumno.ciclo }}</td>
      <td>{{ alumno.empresa.nombre}}</td>
    </tr>
    {% endfor %}
  </table>
</div>
{% endblock %}
